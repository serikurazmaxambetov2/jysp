{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      }
    ]
  },
  "generateOptions": {
    "spec": false
  }
}
